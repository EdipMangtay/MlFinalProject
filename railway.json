{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd email_spam_detector && python -m pip install --upgrade pip && python -m pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd email_spam_detector && python -m gunicorn --bind 0.0.0.0:$PORT --workers 2 --threads 4 --timeout 120 app:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

